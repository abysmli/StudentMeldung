<div class="page-header">
    <h1>报名情况一览</h1>
</div>
<table id="student_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>姓名</th>
            <th>邮箱</th>
            <th>专业</th>
            <th>学生类型</th>
            <th>参加活动</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>姓名</th>
            <th>邮箱</th>
            <th>专业</th>
            <th>学生类型</th>
            <th>参加活动</th>
        </tr>
    </tfoot>

    <tbody>
        <% students.forEach(function(student, index) { %>
            <tr>
                <td>
                    <%= student.name %>
                </td>
                <td>
                    <%= student.email %>
                </td>
                <td>
                    <%= student.department %>
                </td>
                <td>
                    <%= student.type %>
                </td>
                <td>
                    <%= student.activit %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        var dt = $('#student_table').DataTable({
            lengthMenu: [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            stateSave: true,
        });
    });

</script>
