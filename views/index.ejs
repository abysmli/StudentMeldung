<div class="page-header">
    <img src="images/logo.png" style="width:100%">
    <h2>迎新活动报名</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label for="name">姓名</label>
                <input type="text" class="form-control" id="name" placeholder="姓名" name="name">
            </div>
            <div class="form-group">
                <label for="email">邮箱</label>
                <input type="email" class="form-control" id="email" placeholder="邮箱" name="email">
            </div>
            <div class="form-group">
                <label for="department">专业</label>
                <input type="text" class="form-control" id="department" placeholder="专业" name="department">
            </div>
            <div class="form-group">
                <label for="type">学生类型</label>
                <select id="type" name="type">
                    <option value="new">新生</option>
                    <option value="old">老生</option>
                </select>
            </div>
            <div class="form-group">
                <label for="activit">活动选择</label>
                <select id="activit" name="activit">
                    <option value="part1">新生介绍会</option>
                    <option value="part2">新老生烧烤Party</option>
                    <option value="both">全部参加</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    </div>
</div>
